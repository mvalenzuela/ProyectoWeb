<table class ="table table-bordered">
  <thead>
  <tr>
    <th>Document</th>
    <th>User</th>
    <th>Status</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.document.title %></td>
        <td><%= suggestion.user.to_s %></td>
        <td><%= suggestion.status %></td>
        <td><%= link_to 'Show', suggestion, {:class => "btn btn-info"} %></td>
      </tr>
  <% end %>
  </tbody>
</table>
