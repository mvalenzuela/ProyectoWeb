<div class="container">
  <div class="row">
    <div class="col-sm-6">
      <%= form_for(document) do |f| %>
        <% if document.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

            <ul>
            <% document.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :title, class: 'form-group' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :text, class: 'form-group' %>
          <%= f.text_area :text, class: 'form-control' %>
        </div>

        <div class="field">
          <%= f.label :public, class: 'form-group' %>
          <%= f.check_box :public %>
        </div>

        <div class="actions">
          <%= f.submit nil, class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
    <div class="col-sm-6" id="safe_htlm">
      <p id="html_safe_content">
        <%= markdown(document.text).html_safe %>
      </p>
    </div>
  </div>
</div>

<script>
    $(document).on('keyup', '#document_text', function() {
        var content = $("#document_text").val();
        $.ajax({
            url: "<%= get_safe_html_path %>",
            data: {
                document: document,
                content: content
            },
            success: function(result){
                $("#safe_htlm").innerHTML = <%= markdown(document.text).html_safe %>
            }
        });

    });
</script>
