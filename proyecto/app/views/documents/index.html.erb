<p id="notice"><%= notice %></p>

<h1>Documents</h1>

<table class ="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Public</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.public %></td>



        <% if document.text.length > 20 %>
          <td><%=  markdown(document.text[0, 20]).html_safe %></td>
        <% else %>
          <td><%= markdown(document.text).html_safe %></td>
        <% end %>





        <td><%= link_to 'Show', document %></td>
        <td><%= link_to 'Edit', edit_document_path(document) %></td>
        <td><%= link_to 'Destroy', document, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Document', new_document_path, {:class => "btn btn-success"} %>
